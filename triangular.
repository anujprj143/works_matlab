%geneate & plot sawtooth wave

t=-10:0.01:10;
y=sawtooth(t);

subplot(211);
#represents the top plot (i.e. the first) in a 2 row by 1 columns2=-
plot(t,y);
xlabel('time');
ylabel('amplitude');
title('Sawtooth wave');


%it rises for 50% of the time period of sawtooth
y2=sawtooth(t,0.5);
subplot(212);
plot(t,y2);
xlabel('time');
ylabel('amplitude');
title('triangular wave');
