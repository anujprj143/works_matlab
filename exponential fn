%y=ae^(-cn);
%c=(-1/12)+j(pi/6);
%complex signal - where we have real & complex term
a=1+j;

a=1+5*j;

%gives a spiral graph
n=1:100;
a=1;
c=(-1/12)+j*(pi/6);

y=a*exp(-c*n);

plot(y);


